            color: #1a2332;
            margin-bottom: 24px;
        }

        .section-desc {
            font-size: 18px;
            color: #4a5568;
            margin-bottom: 40px;
        }

        .grid {
            display: grid;
            gap: 40px;
            grid-template-columns: repeat(4, 1fr);
        }

        @media (max-width: 899px) {
            .grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        .card {
            background: linear-gradient(135deg, #fff 80%, #f4e4a6 100%);
            border-radius: 24px;
            box-shadow: 0 4px 24px rgba(212, 175, 55, 0.12);
            overflow: hidden;
            transition: box-shadow 0.2s, transform 0.2s;
            border: 2px solid #f4e4a6;
        }

        .card:hover {
            box-shadow: 0 8px 32px #d4af37;
            transform: translateY(-8px) scale(1.03);
        }

        .card-img {
            width: 100%;
            height: 256px;
            object-fit: cover;
        }

        .card-body {
            padding: 32px 24px 24px 24px;
        }

        .card-label {
            display: inline-block;
            background: linear-gradient(90deg, #d4af37 80%, #f4e4a6 100%);
            color: #1a2332;
            font-weight: 700;
            font-size: 15px;
            border-radius: 10px;
            padding: 6px 20px;
            margin-bottom: 12px;
        }

        .card-title {
            font-family: 'Poppins';
            font-weight: 700;
            font-size: 24px;
            color: #1a2332;
            margin-bottom: 12px;
        }

        .card-desc {
            color: #4a5568;
            font-size: 16px;
            margin-bottom: 18px;
        }

        .card-price {
            font-size: 20px;
            color: #d4af37;
            font-weight: 600;
        }

        .card-actions {
            display: flex;
            gap: 12px;
            margin-top: 16px;
