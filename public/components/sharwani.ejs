        }

        .hero-title span {
            display: block;
            background: linear-gradient(90deg, #d4af37, #f4e4a6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 56px;
        }

        .section {
            padding: 80px 0;
            background: #fff;
            border-radius: 32px;
            margin: 40px 0;
        }

        .section-title {
            font-size: 40px;
            font-family: 'Poppins';
