            display: inline-block;
            white-space: nowrap;
            padding-left: 100%;
            animation: marquee 14s linear infinite;
        }

        @keyframes marquee {
            0% {
                transform: translateX(0%);
            }

            100% {
                transform: translateX(-100%);
            }
        }
    </style>
